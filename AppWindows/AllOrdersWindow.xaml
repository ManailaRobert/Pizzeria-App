<Page x:Class="Pizzeria.AppWindows.AllOrdersWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pizzeria.AppWindows"
      mc:Ignorable="d" 
      d:DesignHeight="433.04" d:DesignWidth="896"
      Title="AllOrdersWindow">

    <Grid>
        <StackPanel Margin="60,54,480,66" Width="356" >
            <StackPanel Orientation="Horizontal">
                <TextBox Width="207" Margin="0,0,20,0">Client Name</TextBox>
                <Button Width="30">></Button>
            </StackPanel>
            <ListBox Height="247" Width="356" Margin="0,15,0,0" />
        </StackPanel>
        <StackPanel Margin="480,54,60,38">
            <TextBox Height="20" Margin="0,35,0,0" TextAlignment="Center" IsEnabled="False">Order ID</TextBox>
            <ListBox Height="207"></ListBox>
            <TextBox Height="20" TextAlignment="Right" IsEnabled="False">Price</TextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <TextBox Margin="0,0,10,0">Number of Orders</TextBox>
                <Button Width="75">Make Report</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
